{
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/login"
        }        
    },
    "routes":[
        {
            "route": "/",
            "rewrite": "/index.html"
        },
        {
            "route": "/index.html",
            "headers": {
                "Cache-Control": "public, max-age=604800, immutable"
            }
        },
        {
            "route": "/admin",
            "allowedRoles": ["administrator"]
        },
        {
            "route": "/clinician",
            "allowedRoles": ["clinician"]
        },
        {
            "route": "/login",
            "rewrite": "/.auth/login/aad"
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": "404"
        },
        {
            "route": "/.auth/login/github",
            "statusCode": "404"
        },
        {
            "route": "/logout",
            "rewrite": "/.auth/logout"
        }
    ]
}